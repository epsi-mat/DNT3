    <script>
        function deleteCommande(id){
            let results = window.confirm('Voulez-vraiment supprimer la commande ?')
            if(results){ 
                let route = "/commandes/"+id;
                $.ajax({
                    url: route,
                    method: 'GET',
                    dataType: 'JSON',
                    success(json){
                        if(json){
                            location.reload();
                        }
                    }
                });
            }
        } 
    </script>

